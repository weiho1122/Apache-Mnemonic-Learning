##############################
exercise 1.3-1.5
#include <stdio.h>
float main()
{
    float fahr, celsius;
    int lower, upper, step;
    lower = -20;
    upper = 150;
    step = 5;
    
    celsius = upper;
    printf("temp conversion celsius to fahr \n");
    while (celsius >= lower) 
    {
        fahr = celsius / (5.0/9.0) +32.0;
        printf("%6.0f %3.0f\n", celsius ,fahr );
        celsius = celsius - step;
    }
}

