#################################
exercise 1.8
#include <stdio.h>
void main()
{
    int c, nb, nt, nl, charcount;
    charcount=nb=nt=0; nl=1;
    while ((c=getchar())!=EOF){
       if (c=='\n')
       ++nl;
       else if (c=='\t')
       ++nt;
       else if (c==' ')
       ++nb;
       ++charcount;
      }
    printf("there are %d char entered\n", charcount);
    printf("there are %d blanks, %d tabs and %d lines entered\n", nb, nt, nl);
}
/* 
' '      space 
'\t'     horizontal tab 
'\n'     newline
'\v'     vertical tab 
'\f'     feed 
'\r'     carriage return 
*/

