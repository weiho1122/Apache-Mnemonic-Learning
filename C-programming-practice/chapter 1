exercise 1.9
#include <stdio.h>
void main()
{
    int c;
    while ((c = getchar()) != EOF) {
    if (c == ' ') {
        while ((c = getchar()) == ' ');
        putchar(' ');
        if (c == EOF) break;
        }
    putchar(c);
    }
}

###################################
exercise 1.12
#include<stdio.h>
int main() {
    while ((c = getchar()) != EOF) {
        if (c == ' ') {
            putchar('\n');
        }
        else {
            putchar(c);
        }
    }
}

######################################
exercise 1.13
#include <stdio.h>
void main()
{
    int c;
    while ((c = getchar()) != EOF) {
    if (c == ' ' || c == '\t' || c == '\n') 
      printf ("\n");
    else printf ("*");
    }
}

########################################
exercise 1.14
#include <stdio.h>
void main()
{
    int c, height, i, k;
    int nchar[]={0};
    while ((c = getchar()) != EOF){
        if (c>33 && c<126){
            ++nchar[c];
            if (height<=nchar[c]){
                height=nchar[c];
            }
        }
    }
    for(i=height; i>0; i--){
        printf("%4d|");
        for(k=0;k<=93;k++){
            if (nchar[k]>i){
                printf("#");
            }
            else{
                printf(" ");
            }
            printf("\n");
        }
    }
    printf("    +");
    for(i = 0; i <= 93; ++i){
        printf("-");
        printf("\n     ");
    }
    for(i = 0; i <= 93; ++i){
        printf("%c", i+33);
    }
    printf("\n");
}

